<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03"
      aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    {{#if admin}}
    <a class="navbar-brand" href="/admin/account/activated">TRANG QUẢN TRỊ</a>
    {{else}}
    <a class="navbar-brand" href="/">MOMO</a>
    {{/if}}
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
      {{#if admin}}
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/admin/account/activated">Danh sách tài khoản</a> 
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/transaction">Danh sách giao dịch</a>
        </li>
      </ul>
      {{else}}
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/recharge">Nạp tiền</a> 
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/withdraw">Rút tiền</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/send">Chuyển tiền</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/card">Mua thẻ điện thoại</a>
        </li>
      </ul>
      {{/if}}
      <ul class="nav navbar-nav ml-auto">
        {{#if loggedIn}}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
            Xin chào, {{email}}!
          </a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/user/profile">Thông tin cá nhân</a>
            {{#if admin}}
            {{else}}
            <a class="dropdown-item" href="/user/changepassword">Đổi mật khẩu</a>
            <a class="dropdown-item" href="/user/history">Lịch sử giao dịch</a>
            {{/if}}
          </div>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/logout"><span class="fas fa-sign-out-alt"></span> Đăng xuất</a>
        </li>
        {{else}}
        <li class="nav-item">
          <a class="nav-link" href="/user/register"><span class="fas fa-user"></span> Đăng ký</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/login"><span class="fas fa-sign-in-alt"></span> Đăng nhập</a>
        </li>
        {{/if}}
      </ul>
    </div>
