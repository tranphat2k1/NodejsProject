<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong form-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Đăng ký tài khoản</h3>

                        {{#if err}}
                        <div class="alert alert-danger">
                            <strong>{{err}}</strong>
                        </div>
                        {{/if}}
                        {{#if success}}
                        <div class="alert alert-success">
                            <strong>{{success}}</strong>
                        </div>
                        {{/if}}
                        <form method="post" enctype="multipart/form-data" id="form-register">
                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="fullname"><strong>Tên</strong> </label>
                                        <input type="text" id="fullname" name="fullname"
                                            class="form-control form-control-lg" />
                                        <span class="form-message text-danger invalid"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="phonenumber"> <strong>Số điện thoại</strong>
                                        </label>
                                        <input type="text" id="phone" name="phone"
                                            class="form-control form-control-lg" />
                                        <span class="form-message text-danger invalid"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 ">

                                    <div class="form-outline">
                                        <label for="email" class="form-label"><strong>Email</strong></label>
                                        <input type="text" class="form-control form-control-lg" id="email"
                                            name="email" />
                                        <span class="form-message text-danger invalid"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="birthday"><strong>Ngày sinh</strong></label>
                                        <input type="date" id="birthdate" name="birthdate"
                                            class="form-control form-control-lg" />
                                        <span class="form-message text-danger invalid"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="img1"><strong>CMND mặt trước</strong></label>
                                        <input style="font-size: 15px;" type="file" id="front" name="front"
                                            class="form-registration-file" />
                                        <span class="form-message text-danger invalid"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="img2"><strong>CMND mặt sau</strong></label>
                                        <input style="font-size: 15px;" type="file" id="back" name="back"
                                            class="form-registration-file" />
                                        <span class="form-message text-danger invalid"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-outline">
                                        <label class="form-label" for="address"><strong>Địa chỉ</strong></label>
                                        <input type="text" id="address" name="address"
                                            class="form-control form-control-lg" />
                                        <span class="form-message text-danger invalid"></span>
                                    </div>
                                </div>

                            </div>
                            <br>
                                 <div>
                                <p class="mb-0">Bạn đã có tài khoản? <a href="/user/login"
                                        class="text-white-50 fw-bold">Đăng nhập ngay</a>
                                </p>
                            </div>
                            <div class="mt-4 pt-2 col-12 text-center">
                                <input class="btn btn-lg form-registration-btn" type="submit" value="Đăng ký" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>