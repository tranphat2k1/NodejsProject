<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-buyCard" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Thông tin thẻ điện thoại vừa mua</h3>
                        {{#if success}}
                        <div class="alert alert-success">
                            <strong>{{success}}</strong>
                        </div>
                        {{/if}}

                        <div class="row">
                            <div class="col-md-12 mb-4 ">

                                <div class="form-outline">
                                    <p><strong>Nhà mạng:</strong> <span>{{card.network}}</span></p>
                                    <p><strong>Mệnh giá:</strong> <span>{{currencyFormat card.price}}đ</span></p>
                                    <p><strong>Số lượng:</strong> <span>{{card.count}}</span></p>
                                    <p><strong>Mã thẻ:</strong> <span>
                                        {{#each cardID}}
                                            <p>{{this}}</p>
                                        {{/each}}
                                    </span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>