<section class="vh-100 gradient-custom">

    <div class="container container-table-user">
        <a href="/admin/account/activated"><button type="button" class="btn btn-success">Đã kích hoạt</button></a>
        <a href="/admin/account/nonactivated"><button type="button" class="btn btn-primary">Chưa kích hoạt</button></a>
        <a href="/admin/account/disabled"><button type="button" class="btn btn-warning">Đã vô hiệu hóa</button></a>
        <a href="/admin/account/locked"><button type="button" class="btn btn-danger">Đang bị khóa</button></a>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            {{#if nonactivted}}
                            <h4>Danh sách bổ sung thông tin CMND</h4>
                            <table class="table user-table">
                                <thead>
                                    <tr>
                                        <th><span>Người dùng</span></th>
                                        <th><span>Ngày bổ sung</span></th>
                                        <th><span>Số điện thoại</span></th>
                                        <th><span>Email</span></th>
                                        <th class="text-center"><span>Trạng thái</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each list2}}
                                    <tr>
                                        <td>
                                            <img src="https://bootdey.com/img/Content/user_1.jpg">
                                            <a href="/admin/account/detail/{{_id}}">{{fullname}}</a>
                                        </td>
                                        <td>{{dateFormat updatedAt}}</td>
                                        <td>
                                            {{phone}}
                                        </td>
                                        <td>
                                            {{email}}
                                        </td>
                                        <td class="text-center">
                                            {{{statusColor status}}}
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <h4>Danh sách tài khoản chưa kích hoạt</h4>
                            <table class="table user-table">
                                <thead>
                                    <tr>
                                        <th><span>Người dùng</span></th>
                                        <th><span>Ngày tạo</span></th>
                                        <th><span>Số điện thoại</span></th>
                                        <th><span>Email</span></th>
                                        <th class="text-center"><span>Trạng thái</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each list1}}
                                    <tr>
                                        <td>
                                            <img src="https://bootdey.com/img/Content/user_1.jpg">
                                            <a href="/admin/account/detail/{{_id}}">{{fullname}}</a>
                                        </td>
                                        <td>{{dateFormat createdAt}}</td>
                                        <td>
                                            {{phone}}
                                        </td>
                                        <td>
                                            {{email}}
                                        </td>
                                        <td class="text-center">
                                            {{{statusColor status}}}
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            {{else}}
                            <table class="table user-table">
                                <thead>
                                    <tr>
                                        <th><span>Người dùng</span></th>
                                        {{#if isLocked}}
                                        <th><span>Ngày khóa</span></th>
                                        {{else}}
                                        <th><span>Ngày tạo</span></th>
                                        {{/if}}
                                        <th><span>Số điện thoại</span></th>
                                        <th><span>Email</span></th>
                                        <th class="text-center"><span>Trạng thái</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each list}}
                                    <tr>
                                        <td>
                                            <img src="https://bootdey.com/img/Content/user_1.jpg">
                                            <a href="/admin/account/detail/{{_id}}">{{fullname}}</a>
                                        </td>
                                        {{#if isLocked}}
                                        <td>{{dateFormat disabledAt}}</td>
                                        {{else}}
                                        <td>{{dateFormat createAt}}</td>
                                        {{/if}}
                                        <td>
                                            {{phone}}
                                        </td>
                                        <td>
                                            {{email}}
                                        </td>
                                        <td class="text-center">
                                            {{{statusColor status}}}
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            {{/if}}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>